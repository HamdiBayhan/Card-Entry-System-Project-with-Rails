<h1>DHS Giriş Simülasyonu</h1>
    <table id="table" class="table table-bordered">
      <thead>
        <tr class="active">
          <th>Kart ID</th>
          <th>Giriş Tarihi</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @simulations.each do |simulation| %>
        <tr>
          <td><%= simulation.simId %></td>
          <td><%= simulation.created_at %></td>
          <td><%= link_to 'Show', simulation %></td>
          <td><%= link_to 'Edit', edit_simulation_path(simulation) %></td>
          <td><%= link_to 'Destroy', simulation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

